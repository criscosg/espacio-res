<script type="text/javascript">
    var map;
    var lat;
    var lng;
    var latlng;
    var zoom;

    function initializeMap() {
        latlng = new google.maps.LatLng(37.378399,-6.000971);
        zoom = 15;

        // Create an array of styles.
        var styles = [ { "featureType": "road.arterial", "elementType": "geometry.fill", "stylers": [ { "visibility": "on" }, { "color": "#ebc9b1" } ] },{ "featureType": "road.highway", "elementType": "geometry", "stylers": [ { "visibility": "on" }, { "color": "#ebc9b1" } ] },{ "elementType": "labels.icon", "stylers": [ { "visibility": "off" } ] },{ "elementType": "geometry.stroke", "stylers": [ { "saturation": -1 }, { "weight": 1.0 }, { "color": "#d4cac8" } ] }, { "featureType": "poi.park", "elementType": "geometry.fill", "stylers": [ { "visibility": "on" }, { "color": "#cdddae" } ] },{ "featureType": "water", "stylers": [ { "color": "#6dcdcc" } ] } ];

        var mapOptions = {
            zoom: zoom,
            center: latlng,
            mapTypeId: google.maps.MapTypeId.ROADMAP,
            mapTypeControl: false
        };
        map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
        map.setOptions({styles: styles});

        addMarker();
    }

    function addMarker()
    {
        var marker = new google.maps.Marker({
            map: map,
            position: latlng
        });
    }
</script>